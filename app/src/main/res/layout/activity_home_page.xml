<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".StartAndEndTime">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/username"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/mauve"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MENU"
                android:id="@+id/menutitle"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/mauve"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Add Category"
                android:id="@+id/btnAddCategory"
                android:textSize="18sp"
                android:drawableLeft="@drawable/baseline_add_24"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/mauve"
                app:cornerRadius = "20dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Set Daily Hour Goals"
                android:id="@+id/btnMinandMax"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/baseline_add_24"
                android:backgroundTint="@color/mauve"
                app:cornerRadius = "20dp" />

            <Button
                android:id="@+id/btnTimesheet"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/mauve"
                android:drawableLeft="@drawable/baseline_add_24"
                android:text="Timesheet Entry"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="View Entry List"
                android:id="@+id/btnViewEntries"
                android:drawableLeft="@drawable/baseline_list_24"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/mauve"
                app:cornerRadius = "20dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="View Category Graph"
                android:id="@+id/btnGraph"
                android:drawableLeft="@drawable/baseline_list_24"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/mauve"
                app:cornerRadius = "20dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Log Out"
                android:id="@+id/btnLogOut"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/mauve"
                android:drawableLeft="@drawable/baseline_logoutwhite_24"
                app:cornerRadius = "20dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>