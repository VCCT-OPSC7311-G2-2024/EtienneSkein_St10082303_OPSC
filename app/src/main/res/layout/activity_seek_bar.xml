<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/app_background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnHomeSeekbar"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/mauve"
        android:text="HOME"
        android:textSize="18sp"
        app:cornerRadius="20dp"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Minimum and Maximum Goals"
                android:id="@+id/tvGoals"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/mauve"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Minimum Goal:"
                android:id="@+id/tvMinumumGoal"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/mauve"/>

            <TextView
                android:id="@+id/tvMinumum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/mauve"
                android:textSize="20sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sbSliderMin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom"
                android:drawablePadding="8dp"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Maximum Goal:"
                android:layout_marginTop="20dp"
                android:id="@+id/tvMaximumGoal"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/mauve"/>

            <TextView
                android:id="@+id/tvMaximum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/mauve"
                android:textSize="20sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sbSliderMax"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom"
                android:drawablePadding="8dp"
                android:hint="Password"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ADD GOALS"
                android:id="@+id/btnAddGoal"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/mauve"
                app:cornerRadius = "20dp"

                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
